<%= form_for @user do |f| %>
    <%= render 'shared/error_messages'%>
    <%= f.label :username %> <br>
    <%= f.text_field :username, placeholder: "Enter your username"%> <br>
    <%= f.label :email %> <br>
    <%= f.email_field :email, placeholder: "example@email.com" %> <br>
    <%= f.label :password %> <br>
    <%= f.password_field :password, value:"********"%> <br>
    <%= f.submit 'Update Account'%>
<% end %> 